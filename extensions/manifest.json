  {
    "manifest_version": 3,
    "name": "QuickRizz Lite",
    "version": "0.0.3",
    "description": "Draft-only reply suggestions",
    "permissions": ["storage"],
    "host_permissions": ["http://127.0.0.1:8000/*"],
    "background": { "service_worker": "bg.js" },
    "content_scripts": [
      {
        "matches": [
          "https://www.instagram.com/*",
          "https://web.whatsapp.com/*",
          "https://www.messenger.com/*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle",
        "all_frames": true
      }
    ]
  }
